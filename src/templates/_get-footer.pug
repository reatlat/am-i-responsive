//- Get Footer section
mixin getFooter(language)

    //- AddThis ID
            @link https://www.addthis.com/academy/the-addthis_share-variable/
            @link https://www.addthis.com/academy/the-addthis_config-variable/
    script(type='text/javascript').
        var addthis_share = addthis_share || {};
        addthis_share.title = window.document.title;
        addthis_share.url = window.location.href;
        //addthis_share.media = "#{pageURL}/asstes/images/og-image.jpg";
        var addthis_config = {
            'pubid': '#{addThisPubId}',
            'ui_language': '#{language}',
            'data_ga_property': '#{googleTagManagerID}',
            'data_ga_social': true
        };

    //- Discus config
        @link https://disqus.com/admin/universalcode/#configuration-variables
    script(type = 'text/javascript').
        var disqus_config = function () {
            this.page.url = "#{pageURL}";
            this.page.identifier = "#{pageUUID}";
            this.page.language = "#{language}";
        };

    //- Mdl popup messages
    script(type = 'text/javascript').
        window.ami_config = {
            'tos': {
                'title': '!{locales[language].popup.tos.title}',
                'content': '!{locales[language].popup.tos.content}'
            },
            'gdpr': {
                'title': '!{locales[language].popup.gdpr.title}',
                'content': '!{locales[language].popup.gdpr.content}'
            },
            'mit': {
                'title': '!{locales[language].popup.mit.title}',
                'content': '!{locales[language].popup.mit.content}'
            },
            'cookies': {
                'title': '!{locales[language].popup.cookies.title}',
                'negative_title': '!{locales[language].popup.cookies.negative}',
                'positive_title': '!{locales[language].popup.cookies.positive}',
                'content': '!{locales[language].popup.cookies.content}'
            },
        };

    #ami-bookmark-snack.mdl-js-snackbar.mdl-snackbar
        .mdl-snackbar__text
        button.mdl-snackbar__action(type='button')

    //- Old jQuery need to test new one =)
        script(type='text/javascript', src='//code.jquery.com/jquery-latest.js')
        script(type='text/javascript', src='//code.jquery.com/ui/1.10.0/jquery-ui.js')

    script(type='text/javascript', src='https://cdnjs.cloudflare.com/ajax/libs/jquery/1.12.4/jquery.min.js')
    script(type='text/javascript', src='https://cdnjs.cloudflare.com/ajax/libs/jqueryui/1.12.1/jquery-ui.min.js')
    script(type='text/javascript', src='https://cdnjs.cloudflare.com/ajax/libs/js-cookie/2.2.0/js.cookie.min.js')
    script(type='text/javascript', src='https://code.getmdl.io/1.3.0/material.min.js')
    script(type='text/javascript', src='https://s7.addthis.com/js/300/addthis_widget.js')
    script(type='text/javascript', src='/assets/js/scripts.min.js')

    script(type='text/javascript').
        (function () {
            var d = document, s = d.createElement('script');
            s.src = 'https://#{disqusCommentsId}.disqus.com/embed.js';
            s.setAttribute('data-timestamp', +new Date());
            (d.head || d.body).appendChild(s);
        })();
    script#dsq-count-scr(type='text/javascript', src='https://#{disqusCommentsId}.disqus.com/count.js', async='')

    script(type='text/javascript').
        (function () {
            'use strict';
            var snackbarContainer = document.querySelector('#ami-bookmark-snack');
            var showToastButton = document.querySelector('#ami-js-bookmark');
            showToastButton.addEventListener('click', function () {
                'use strict';
                var data = {message: '#{locales[language].page_content.features.superlink}'};
                snackbarContainer.MaterialSnackbar.showSnackbar(data);
            });
        }());
