mixin generatePage(language)

    - superLink = "javascript:void('" + pageURL + "?url='==window.location?alert('Drag me to your bookmarks bar!'):window.location='" + pageURL + "?url='+window.location)"
    doctype html
    html(lang=language)
        head
            +getHead(language)

        body.ami
            .mdl-layout.mdl-js-layout.mdl-layout--fixed-header

                +mdl-header(language)

                +mdl-drawer-navigation(language)

                main.mdl-layout__content
                    .page-content
                        .mdl-grid.mha

                            .mdl-cell.mdl-cell--12-col.mdl-shadow--2dp.phxl.pvlg.bg-image--devices
                                .mdl-textfield.mdl-js-textfield.mdl-textfield--floating-label
                                    input#domain.mdl-textfield__input.d-input(name='domain', type='text', value='')
                                    label.mdl-textfield__label(for='domain')= locales[language].page_content.url_title

                                #screenshot-wrapper.wrapper.ptxxl
                                    section.display
                                        .mobile.bg-norepeat: iframe#mobile(src=demoURL)
                                        .tablet.bg-norepeat: iframe#tablet(src=demoURL)
                                        .laptop.bg-norepeat: iframe#laptop(src=demoURL)
                                        .desktop.bg-norepeat: iframe#desktop(src=demoURL)

                            .mdl-cell.mdl-cell--12-col.mdl-card.mdl-shadow--2dp
                                .mdl-card__title.mdl-color--green
                                    h2.mdl-card__title-text.mdl-color-text--green-50= locales[language].page_content.features.title
                                .mdl-card__supporting-text.mha
                                    //p= locales[language].page_content.features.p_1
                                    ul.mdl-list
                                        li.mdl-list__item: span.mdl-list__item-primary-content
                                            i.material-icons.mdl-list__item-icon home
                                            | http://localhost/ works so it's great for taking screenshots of local development URLs
                                        li.mdl-list__item: span.mdl-list__item-primary-content
                                            i.material-icons.mdl-list__item-icon share
                                            | Send someone a link with your site already embeded by using ?url=http://www.yoursite.com - example
                                        li.mdl-list__item: span.mdl-list__item-primary-content
                                            i.material-icons.mdl-list__item-icon shuffle
                                            | Rearrange and reorder the devices by clicking and dragging on the device
                                        li.mdl-list__item
                                            span.mdl-list__item-primary-content
                                                i.material-icons.mdl-list__item-icon bookmark
                                                | You can check the responsiveness on any site with a single click. Simply drag to your bookmarks bar and you're away! >>
                                            a.mdl-list__item-secondary-action(href=superLink)
                                                i.material-icons link


                            .mdl-cell.mdl-cell--5-col.mdl-cell--12-col-phone.mdl-card.mdl-shadow--2dp
                                .mdl-card__title.mdl-color--orange
                                    h2.mdl-card__title-text.mdl-color-text--orange-50= locales[language].page_content.viewports.title
                                .mdl-card__supporting-text.mhm.pan.fullwidth
                                    table.mdl-data-table.mdl-js-data-table.ami-viewport-table.fullwidth(cellspacing="0")
                                        //-thead
                                            tr
                                                th.mdl-data-table__cell--non-numeric Device type
                                                th
                                        tbody
                                            tr
                                                td.mdl-data-table__cell--non-numeric Desktop
                                                td.mdl-data-table__cell--non-numeric!= locales[language].page_content.viewports.desktop
                                            tr
                                                td.mdl-data-table__cell--non-numeric Laptop
                                                td.mdl-data-table__cell--non-numeric!= locales[language].page_content.viewports.laptop
                                            tr
                                                td.mdl-data-table__cell--non-numeric Tablet
                                                td.mdl-data-table__cell--non-numeric!= locales[language].page_content.viewports.tablet
                                            tr
                                                td.mdl-data-table__cell--non-numeric Mobile
                                                td.mdl-data-table__cell--non-numeric!= locales[language].page_content.viewports.mobile


                            .mdl-cell.mdl-cell--12-col.mdl-card.mdl-shadow--2dp#how-to-use
                                .mdl-card__title.mdl-color--purple
                                    h2.mdl-card__title-text.mdl-color-text--purple-50= locales[language].page_content.how_to_use.title
                                .mdl-card__supporting-text.mha
                                    .mdl-grid
                                        .mdl-cell.mdl-cell--4-col
                                            p= locales[language].page_content.how_to_use.p_1
                                            p= locales[language].page_content.how_to_use.p_2
                                            p= locales[language].page_content.how_to_use.p_3


                            .mdl-cell.mdl-cell--12-col.mdl-card.mdl-shadow--2dp#about-project
                                .mdl-card__title.mdl-color--red
                                    h2.mdl-card__title-text.mdl-color-text--red-50= locales[language].page_content.about_project.title
                                .mdl-card__supporting-text.mha
                                    .mdl-grid
                                        .mdl-cell.mdl-cell--4-col
                                            p= locales[language].page_content.about_project.p_1
                                            p= locales[language].page_content.about_project.p_2
                                            p= locales[language].page_content.about_project.p_3





                    //- TODO: add button ansd script to take screenshot
                        .mdl-grid
                            .mdl-cell.mdl-cell--12-col.mha.pbmd.mdl-typography--text-right
                                button.mdl-button.mdl-js-button.mdl-button--fab.mdl-js-ripple-effect.mdl-button--colored
                                    i.material-icons photo_camera


                //- FOOTER
                +mdl-footer(language)

            +getFooter(language)