mixin generatePage(language)

    - superLink = "javascript:void('" + pageURL + "'!==window.location.origin?window.location='" + pageURL + "?url='+window.location.origin+window.location.pathname:console.log('AMI: oops... something wrong'))"
    doctype html
    html(lang=language)
        head
            +getHead(language)

        body.ami
            .mdl-layout.mdl-js-layout.mdl-layout--fixed-header

                +mdl-header(language)

                //- TODO: perhaps add more optons and links to drawer
                    +mdl-drawer-navigation(language)

                main.mdl-layout__content
                    .page-content
                        .mdl-grid.mha

                            .mdl-cell.mdl-cell--12-col.mdl-shadow--2dp.phxl.pvlg.bg-image--devices
                                #domain-input-wrapper.mdl-textfield.mdl-js-textfield.mdl-textfield--floating-label
                                    input#domain.mdl-textfield__input.d-input(name='domain', type='text', value='')
                                    label.mdl-textfield__label(for='domain')= locales[language].page_content.url_title

                                #screenshot-wrapper.wrapper.ptxxl
                                    section.display
                                        .mobile.bg-norepeat: iframe#mobile(src=demoURL)
                                        .tablet.bg-norepeat: iframe#tablet(src=demoURL)
                                        .laptop.bg-norepeat: iframe#laptop(src=demoURL)
                                        .desktop.bg-norepeat: iframe#desktop(src=demoURL)

                            .mdl-cell.mdl-cell--12-col.mdl-card.mdl-shadow--2dp
                                .mdl-card__title.mdl-color--green
                                    h2.mdl-card__title-text.mdl-color-text--green-50= locales[language].page_content.features.title
                                .mdl-card__supporting-text.mha
                                    ul.mdl-list.man.pan
                                        li.mdl-list__item: span.mdl-list__item-primary-content
                                            i.material-icons.mdl-list__item-icon home
                                            != locales[language].page_content.features.p_1
                                        li.mdl-list__item: span.mdl-list__item-primary-content
                                            i.material-icons.mdl-list__item-icon share
                                            != locales[language].page_content.features.p_2
                                        li.mdl-list__item: span.mdl-list__item-primary-content
                                            i.material-icons.mdl-list__item-icon shuffle
                                            != locales[language].page_content.features.p_3
                                        li.mdl-list__item
                                            span.mdl-list__item-primary-content.mrsm
                                                i.material-icons.mdl-list__item-icon bookmark
                                                != locales[language].page_content.features.p_4
                                            a#ami-js-bookmark.mdl-list__item-secondary-action(href=superLink).mdl-button.mdl-js-button.mdl-button--fab.mdl-button--mini-fab.mdl-button--colored
                                                i.material-icons add

                            .mdl-cell.mdl-cell--4-col.mdl-cell--12-col-tablet.mdl-card.mdl-shadow--2dp#how-to-use
                                .mdl-card__title.mdl-color--purple
                                    h2.mdl-card__title-text.mdl-color-text--purple-50= locales[language].page_content.how_to_use.title
                                .mdl-card__supporting-text.mha
                                    ul.mdl-list.man.pan
                                        li.mdl-list__item: span.mdl-list__item-primary-content
                                            i.material-icons.mdl-list__item-icon filter_1
                                            != locales[language].page_content.how_to_use.p_1
                                        li.mdl-list__item: span.mdl-list__item-primary-content
                                            i.material-icons.mdl-list__item-icon filter_2
                                            != locales[language].page_content.how_to_use.p_2
                                        li.mdl-list__item: span.mdl-list__item-primary-content
                                            i.material-icons.mdl-list__item-icon filter_3
                                            != locales[language].page_content.how_to_use.p_3



                            .mdl-cell.mdl-cell--8-col.mdl-cell--12-col-tablet.mdl-card.mdl-shadow--2dp
                                .mdl-card__title.mdl-color--indigo
                                    h2.mdl-card__title-text.mdl-color-text--indigo-50= locales[language].page_content.viewports.title
                                .mdl-card__supporting-text.mhm.pan.fullwidth
                                    table.mdl-data-table.mdl-js-data-table.ami-viewport-table.fullwidth(cellspacing="0")
                                        //-thead
                                            tr
                                                th.mdl-data-table__cell--non-numeric Device type
                                                th
                                        tbody
                                            tr
                                                td.mdl-data-table__cell--non-numeric Desktop
                                                td.mdl-data-table__cell--non-numeric!= locales[language].page_content.viewports.desktop
                                            tr
                                                td.mdl-data-table__cell--non-numeric Laptop
                                                td.mdl-data-table__cell--non-numeric!= locales[language].page_content.viewports.laptop
                                            tr
                                                td.mdl-data-table__cell--non-numeric Tablet
                                                td.mdl-data-table__cell--non-numeric!= locales[language].page_content.viewports.tablet
                                            tr
                                                td.mdl-data-table__cell--non-numeric Mobile
                                                td.mdl-data-table__cell--non-numeric!= locales[language].page_content.viewports.mobile
                                    p.mtsm.mhmd!= locales[language].page_content.viewports.note


                            +discus_comments(language)


                    +addthis_share(language)


                //- FOOTER
                +mdl-footer(language)

            +getFooter(language)